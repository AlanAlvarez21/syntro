---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div class="py-20">
    <div class="px-8 mx-auto md:px-12 lg:px-24 max-w-7xl">
      <div class="text-center max-w-2xl mx-auto lg:text-balance mb-16">
        <p class="text-sm leading-normal font-bold uppercase text-accent-600">
          PARTNERSHIP OPPORTUNITIES
        </p>
        <h1
          class="text-xl leading-tight tracking-tight sm:text-2xl md:text-3xl capitalize lg:text-4xl mt-4 font-medium text-base-900 lg:text-balance">
          Discuss Your Investment Opportunity
        </h1>
        <p class="text-base leading-normal mt-4 text-base-500 font-medium">
          Ready to transform your business with a high-impact software solution? Let's discuss your strategic objectives.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <div>
          <h2 class="text-2xl font-semibold text-base-900 mb-6">Strategic Partnership</h2>
          <div class="space-y-4">
            <div class="flex items-start gap-4">
              <div class="bg-accent-100 p-3 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-base-900">Executive Consultation</h3>
                <p class="text-base-500">+1 (555) 123-4567</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="bg-accent-100 p-3 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-base-900">Strategic Inquiries</h3>
                <p class="text-base-500">investors@nexova.com</p>
              </div>
            </div>
            
            <div class="flex items-start gap-4">
              <div class="bg-accent-100 p-3 rounded-lg">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-accent-600" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
              </div>
              <div>
                <h3 class="font-medium text-base-900">Innovation Hub</h3>
                <p class="text-base-500">500 Innovation Drive, Suite 300<br>San Francisco, CA 94103</p>
              </div>
            </div>
          </div>
          
          <div class="mt-10">
            <h3 class="text-lg font-semibold text-base-900 mb-4">Investment Hours</h3>
            <ul class="space-y-2 text-base-500">
              <li class="flex justify-between border-b border-base-100 pb-2">
                <span>Monday - Friday</span>
                <span>8:00 AM - 7:00 PM</span>
              </li>
              <li class="flex justify-between border-b border-base-100 pb-2">
                <span>Saturday</span>
                <span>9:00 AM - 5:00 PM</span>
              </li>
              <li class="flex justify-between pb-2">
                <span>Sunday</span>
                <span>By Appointment</span>
              </li>
            </ul>
          </div>
          
          <div class="mt-10 bg-blue-50 p-6 rounded-lg">
            <h3 class="text-lg font-semibold text-base-900 mb-2">Investment Confidence</h3>
            <p class="text-base-500 mb-3">
              Our solutions have helped clients secure over $120M in funding and achieve 300-500% ROI within 18 months.
            </p>
            <ul class="text-base-500 space-y-1">
              <li class="flex items-start">
                <svg class="h-5 w-5 text-accent-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Proven track record of investor-backed success</span>
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-accent-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Measurable business outcomes with every project</span>
              </li>
              <li class="flex items-start">
                <svg class="h-5 w-5 text-accent-600 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
                </svg>
                <span>Scalable architecture for rapid growth</span>
              </li>
            </ul>
          </div>
        </div>
        
        <div>
          <div class="bg-white p-8 rounded-xl shadow-lg">
            <h2 class="text-2xl font-semibold text-base-900 mb-6">Strategic Partnership Inquiry</h2>
            <form class="space-y-6" id="contactForm">
              <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
                <div>
                  <label for="firstName" class="block text-sm font-medium text-base-700 mb-1">First Name</label>
                  <input 
                    type="text" 
                    id="firstName" 
                    name="firstName"
                    class="w-full px-4 py-2 border border-base-200 rounded-md focus:ring-accent-500 focus:border-accent-500"
                    placeholder="John"
                    required
                  />
                </div>
                <div>
                  <label for="lastName" class="block text-sm font-medium text-base-700 mb-1">Last Name</label>
                  <input 
                    type="text" 
                    id="lastName" 
                    name="lastName"
                    class="w-full px-4 py-2 border border-base-200 rounded-md focus:ring-accent-500 focus:border-accent-500"
                    placeholder="Doe"
                    required
                  />
                </div>
              </div>
              
              <div>
                <label for="company" class="block text-sm font-medium text-base-700 mb-1">Company</label>
                <input 
                  type="text" 
                  id="company" 
                  name="company"
                  class="w-full px-4 py-2 border border-base-200 rounded-md focus:ring-accent-500 focus:border-accent-500"
                  placeholder="Company Name"
                  required
                />
              </div>
              
              <div>
                <label for="email" class="block text-sm font-medium text-base-700 mb-1">Email</label>
                <input 
                  type="email" 
                  id="email" 
                  name="email"
                  class="w-full px-4 py-2 border border-base-200 rounded-md focus:ring-accent-500 focus:border-accent-500"
                  placeholder="john.doe@company.com"
                  required
                />
              </div>
              
              <div>
                <label for="projectValue" class="block text-sm font-medium text-base-700 mb-1">Investment Interest</label>
                <select 
                  id="projectValue"
                  name="projectValue"
                  class="w-full px-4 py-2 border border-base-200 rounded-md focus:ring-accent-500 focus:border-accent-500"
                >
                  <option value="Strategic Partnership">Strategic Partnership</option>
                  <option value="Development Investment">Development Investment</option>
                  <option value="Premium Project" selected>Premium Project</option>
                  <option value="Mobile App Development">Mobile App Development</option>
                  <option value="Enterprise Solution">Enterprise Solution</option>
                  <option value="Proof of Concept">Proof of Concept</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-base-700 mb-1">Project Vision</label>
                <textarea 
                  id="message" 
                  name="message"
                  rows="5"
                  class="w-full px-4 py-2 border border-base-200 rounded-md focus:ring-accent-500 focus:border-accent-500"
                  placeholder="Describe your vision for the software solution and expected business outcomes..."
                  required
                ></textarea>
              </div>
              
              <div>
                <button 
                  type="submit"
                  class="w-full flex items-center justify-center transition-all duration-200 ring-1 focus:ring-2 focus:outline-none text-white bg-accent-600 hover:bg-accent-700 focus:ring-accent-700/50 h-11 px-6 py-3 text-base font-medium rounded-md"
                  id="submitBtn"
                >
                  Discuss Investment Opportunity
                </button>
                <div id="formMessage" class="mt-3 text-center hidden"></div>
              </div>
            </form>
          </div>
        </div>
        
        <script>
          document.getElementById('contactForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const submitBtn = document.getElementById('submitBtn');
            const formMessage = document.getElementById('formMessage');
            
            // Get form data
            const formData = new FormData(this);
            const data = Object.fromEntries(formData);
            
            // Disable submit button and show loading state
            submitBtn.disabled = true;
            submitBtn.textContent = 'Sending...';
            
            try {
              // In a real implementation, you would send the data to a backend service
              // For now, we'll simulate sending an email by opening a mailto link
              const subject = encodeURIComponent('Business Opportunity Inquiry from Contact Form');
              const body = encodeURIComponent(`
                New business opportunity inquiry received:
                
                First Name: ${data.firstName}
                Last Name: ${data.lastName}
                Company: ${data.company}
                Email: ${data.email}
                Investment Interest: ${data.projectValue}
                Message: ${data.message}
              `);
              
              // This opens the user's default email client with the pre-filled message
              window.location.href = `mailto:alandanielalvarez0000@gmail.com?subject=${subject}&body=${body}`;
              
              // Show success message
              formMessage.textContent = 'Thank you! Your message has been prepared. Please check your email client to send.';
              formMessage.className = 'mt-3 text-center text-green-600 font-medium';
              formMessage.classList.remove('hidden');
              
              // Reset form after a short delay
              setTimeout(() => {
                this.reset();
              }, 1000);
            } catch (error) {
              // Show error message
              formMessage.textContent = 'Sorry, there was an error preparing your message. Please try again.';
              formMessage.className = 'mt-3 text-center text-red-600 font-medium';
              formMessage.classList.remove('hidden');
            } finally {
              // Re-enable submit button and restore original text
              submitBtn.disabled = false;
              submitBtn.textContent = 'Discuss Investment Opportunity';
            }
          });
        </script>
      </div>
    </div>
  </div>
</BaseLayout>