---
import BaseLayout from "../layouts/BaseLayout.astro";
import Portfolio from "../components/landing/Portfolio.astro";
---

<BaseLayout>
  <div class="py-20">
    <div class="px-8 mx-auto md:px-12 lg:px-24 max-w-7xl">
      <div class="text-center max-w-2xl mx-auto lg:text-balance">
        <p class="text-sm leading-normal font-bold uppercase text-accent-600">
          PROVEN SUCCESS STORIES
        </p>
        <h1
          class="text-xl leading-tight tracking-tight sm:text-2xl md:text-3xl capitalize lg:text-4xl mt-4 font-medium text-base-900 lg:text-balance">
          Investor-Backed Solutions
        </h1>
        <p class="text-base leading-normal mt-4 text-base-500 font-medium">
          Demonstrated results from our portfolio of high-impact software solutions.
        </p>
      </div>
    </div>
  </div>
  
  <div class="py-16 bg-gray-50">
    <div class="px-8 mx-auto md:px-12 lg:px-24 max-w-7xl">
      <div class="mt-16 bg-white p-8 rounded-xl shadow-lg">
        <div class="text-center mb-8">
          <h2 class="text-2xl font-semibold text-base-900 mb-2">Investor Confidence Through Proven Results</h2>
          <p class="text-base-500">Our portfolio companies have collectively raised over $120M in funding</p>
        </div>
        
        <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
          <div>
            <div class="text-3xl font-bold text-accent-600">$120M+</div>
            <div class="text-sm text-base-500">Funding Raised by Clients</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-accent-600">3.2x</div>
            <div class="text-sm text-base-500">Average ROI</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-accent-600">18mo</div>
            <div class="text-sm text-base-500">Avg. Time to ROI</div>
          </div>
          <div>
            <div class="text-3xl font-bold text-accent-600">95%</div>
            <div class="text-sm text-base-500">On-Time Delivery</div>
          </div>
        </div>
      </div>
    </div>
  </div>
  
  <Portfolio id="portfolio" />
</BaseLayout>