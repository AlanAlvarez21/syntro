---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/landing/Hero.astro";
import SectionOne from "../components/landing/SectionOne.astro";
import SectionTwo from "../components/landing/SectionTwo.astro";
import Pricing from "../components/landing/Pricing.astro";
import WhyChooseUs from "../components/landing/WhyChooseUs.astro";
import HowItWorks from "../components/landing/HowItWorks.astro";
import Testimonial from "../components/global/Testimonial.astro";
import Portfolio from "../components/landing/Portfolio.astro";
---

<BaseLayout>
  <div class="bg-gradient-to-br from-blue-50 via-white to-blue-100">
    <div class="px-8 pt-12 pb-20 mx-auto md:px-12 lg:px-24 max-w-7xl relative">
      <div class="max-w-3xl text-center mx-auto lg:text-balance mb-10">
        <h1
          class="text-xl/snug leading-tight tracking-tight sm:text-2xl/snug md:text-3xl/snug capitalize lg:text-4xl/snug mt-4 font-medium text-base-900">
          Transform Your Business with Investor-Backed Software Solutions
        </h1>
        <p class="text-base leading-normal mt-4 text-base-500 font-medium">
          We deliver measurable business outcomes with proven ROI. Our solutions have helped clients secure over $120M in funding.
        </p>
        <div
          class="flex flex-wrap items-center gap-4 justify-center mx-auto mt-10">
          <a
            href="/contact"
            class="flex items-center justify-center transition-all duration-200 ring-1 focus:ring-2 focus:outline-none text-white bg-accent-600 hover:bg-accent-700 focus:ring-accent-700/50 h-12 px-6 py-3 text-base font-medium rounded-md">
            Discuss Your Investment
          </a>
          <a
            href="/mobile-apps"
            class="flex items-center justify-center transition-all duration-200 ring-1 focus:ring-2 focus:outline-none text-base-500 bg-white hover:bg-accent-100 ring-1 ring-base-200 focus:ring-accent-100 hover:text-accent-600 h-12 px-6 py-3 text-base font-medium rounded-md">
            Mobile Solutions
          </a>
          <a
            href="/portfolio"
            class="flex items-center justify-center transition-all duration-200 ring-1 focus:ring-2 focus:outline-none text-base-500 bg-white hover:bg-accent-100 ring-1 ring-base-200 focus:ring-accent-100 hover:text-accent-600 h-12 px-6 py-3 text-base font-medium rounded-md">
            View Success Stories
          </a>
        </div>
      </div>
      
      <div class="flex justify-center mb-16">
        <div class="flex -space-x-4">
          <!-- Mobile Banking -->
          <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-blue-200 to-blue-300 flex items-center justify-center shadow-lg">
            <svg class="w-8 h-8 text-blue-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 18h.01M8 21h8a2 2 0 002-2V5a2 2 0 00-2-2H8a2 2 0 00-2 2v14a2 2 0 002 2z"></path>
            </svg>
          </div>
          <!-- Fitness & Wellness -->
          <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-green-200 to-emerald-300 flex items-center justify-center shadow-lg">
            <svg class="w-8 h-8 text-green-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4.318 6.318a4.5 4.5 0 000 6.364L12 20.364l7.682-7.682a4.5 4.5 0 00-6.364-6.364L12 7.636l-1.318-1.318a4.5 4.5 0 00-6.364 0z"></path>
            </svg>
          </div>
          <!-- E-commerce -->
          <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-purple-200 to-purple-300 flex items-center justify-center shadow-lg">
            <svg class="w-8 h-8 text-purple-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 3h2l.4 2M7 13h10l4-8H5.4M7 13L5.4 5M7 13l-2.293 2.293c-.63.63-.184 1.707.707 1.707H17m0 0a2 2 0 100 4 2 2 0 000-4zm-8 2a2 2 0 11-4 0 2 2 0 014 0z"></path>
            </svg>
          </div>
          <!-- SaaS Dashboard -->
          <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-orange-200 to-pink-300 flex items-center justify-center shadow-lg">
            <svg class="w-8 h-8 text-orange-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
            </svg>
          </div>
          <!-- AI & IoT -->
          <div class="w-16 h-16 rounded-xl bg-gradient-to-br from-indigo-200 to-purple-300 flex items-center justify-center shadow-lg">
            <svg class="w-8 h-8 text-indigo-700" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"></path>
            </svg>
          </div>
        </div>
      </div>
      
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 mt-8 max-w-4xl mx-auto">
        <div class="text-center">
          <div class="text-3xl font-bold text-accent-600">120M+</div>
          <div class="text-sm text-base-500">Funding Secured by Clients</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-accent-600">300-500%</div>
          <div class="text-sm text-base-500">Average ROI</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-accent-600">200+</div>
          <div class="text-sm text-base-500">Successful Projects</div>
        </div>
        <div class="text-center">
          <div class="text-3xl font-bold text-accent-600">18mo</div>
          <div class="text-sm text-base-500">Avg. ROI Timeline</div>
        </div>
      </div>
    </div>
  </div>
  
  <SectionOne id="services" />
  <SectionTwo id="solutions" />
  <WhyChooseUs id="about" />
  <HowItWorks />
  <Portfolio id="portfolio" />
  <Testimonial id="testimonials" />
</BaseLayout>
